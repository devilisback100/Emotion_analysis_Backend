{
  "version": 2,
  "builds": [
    { "src": "index.py", "use": "@vercel/python" }
  ],
  "routes": [
    {
      "src": "/classify_emotion",
      "dest": "/api/classify_emotion"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "installCommand": "pip3.9 install --disable-pip-version-check --target . --upgrade -r requirements.txt"
}
